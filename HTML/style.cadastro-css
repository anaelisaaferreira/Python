/*Reset das margens da p√°gina*/
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    
}
/*Estilos globais*/ 
body {
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    background-color: lightpink;
    color: hotpink;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

.container {
    background-color: rgb(255,255,255);
    padding: 20px;
    border-radius: 20px;
    box-shadow: 20px 20px rgba(255, 105, 180, 0.5);
    width: 100%;
    max-width: 400px;
    text-align: center;

}

h1{
    font-size: 30px;
    color:rgb(255, 105, 180);
    margin-bottom: 15px;
}

.form-group {
    margin-bottom: 10px;
    text-align: left;

}

label {
    font-size: 18px;
    margin-bottom: 5px;
    display: block;

}

input[type="text"],
input[type="tel"],
input[type="email"],
input[type="date"],
input[type="password"] {
    width: 100%;
    padding: 4px;
    border: 1px solid rgba(175, 84, 129, 0.5);
    border-radius: 5%;
    font-size: 14px;
    
}

input[type="text"]:focus,
input[type="tel"]:focus,
input[type="email"]:focus,
input[type="date"]:focus,
input[type="password"]:focus {
    border-color: deeppink;
    outline: none;

}

button {
    font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
    font-size: 15px;
    background-color:hotpink;
    color: ghostwhite;
    padding: 5px 8px;
    border: none;
    border-radius: 4px;
    font-size: 16px;
    width: 100%;
    cursor: pointer;


}
